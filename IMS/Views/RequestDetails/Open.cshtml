@model IEnumerable<IMS.Models.getAllApprovedORDeniedRequests_Result>

@{
    ViewBag.Title = "Open requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Open Requests
        <small>View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Dashboard</a></li>
        <li class="active">Open requests</li>
    </ol>
</section>
<br />
<div class="row">
    <div class="col-xs-12">
        <div class="box" style="border-top-color: #3c8dbc">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x: scroll">
                <table id="example2" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Request ID</th>
                            <th>Item Description</th>
                            <th>Quantity</th>
                            <th>Purpose</th>
                            <th>Requested By</th>
                            <th>Request Date</th>
                            <th>Approval Status</th>
                            <th>Attention Of</th>
                            <th>Details</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.request_ID</td>
                                <td>@item.description_of_items</td>
                                <td>@item.quantity</td>
                                <td>@item.purpose_of_item</td>
                                <td>@item.requesterFirstName @item.requesterSurname</td>
                                <td>@item.date_of_request</td>
                                <td>@item.status</td>
                                <td>@item.approverFName @item.approverLName</td>
                                <td>@Html.ActionLink("View Details", "Create")</td>

                            </tr>
                        }
                    </tbody>

                    <tfoot>
                        <tr></tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->


