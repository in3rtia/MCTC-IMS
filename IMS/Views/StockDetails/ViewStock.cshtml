@model IEnumerable<IMS.Models.getStockByCategory_Result>

@{
    ViewBag.Title = "View stock in category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Category
        <small>View</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Dashboard</a></li>
        <li class="active"></li>
    </ol>
</section>
<br />
<div class="row">
    <div class="col-xs-12">
        <div class="box" style="border-top-color: #3c8dbc">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="overflow-x: scroll">
                <table id="example2" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Stock Code</th>
                            <th>Item Description</th>
                            <th>Quantity</th>
                            <th>Issue Unit</th>
                            <th>Withdraw Unit</th>
                            <th>Re-order level</th>
                            <th>Type</th>
                            <th>Compartment</th>
                            <th>Availability</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.stock_code</td>
                                <td>@item.description_of_items</td>
                                <td>@item.quantity_available</td>
                                <td>@item.unit_of_issue</td>
                                <td>@item.unit_of_withdraw</td>
                                <td>@item.reorder_level</td>
                                <td>@item.stock_type</td>
                                <td>@item.compartment_ID</td>
                                <td>@item.status</td>
                                <td>@Html.ActionLink("Request", "") | @Html.ActionLink("Edit", "", new { id = @item.stock_code })</td>
                            </tr>
                        }
                    </tbody>

                    <tfoot>
                        <tr></tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
